Red [	Title:   "Matrix tests "	Author:  "Francois Jouen"	File: 	 %testConvMat.red	Needs:	 'View]#include %../../libs/redcv.red ; for redCV functionsmask: [-1.0 0.0 -1.0		0.0 4.0 0.0 	   -1.0 0.0 -1.0]intSize: 8iSize: intSize / 8img1: rcvLoadImage %../../images/lena.jpgimg2: rcvCreateImage img1/sizeimg3: rcvCreateImage img1/size mat1: rcvCreateMat 'integer! intSize img1/sizemat2: rcvCreateMat 'integer! intSize img1/sizercv2Gray/average img1 img2								; Grayscaled imagercvImage2Mat img2 mat1 iSize							; Converts grayscaled image to 1 Channel matrix [0..255]  rcvConvolveMat mat1 mat2 img1/size iSize mask 1.0 0.0	; Mat convolutionrcvMat2Image mat2 img3 iSize							; from matrix to red images1: rcvNamedWindow "Source"s2: rcvNamedWindow "Gray"m1: rcvNamedWindow "Matrix Convolution"rcvMoveWindow s1 100x100rcvMoveWindow s2 400x100rcvMoveWindow m1 700x100rcvShowImage s1 img1rcvShowImage s2 img2rcvShowImage m1 img3rcvResizeWindow m1 512x512do-events