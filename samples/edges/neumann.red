Red [	Title:   "Sobel Filter "	Author:  "Francois Jouen"	File: 	 %sobel.red	Needs:	 'View]; last Red Master required!#include %../../libs/redcv.red ; for redCV functionsmargins: 10x10defSize: 512x512img1: rcvCreateImage defSizedst1:  rcvCreateImage defSizedst2:  rcvCreateImage defSizeisFile: falseloadImage: does [    isFile: false	canvas1/image/rgb: black	canvas2/image/rgb: black	tmp: request-file	if not none? tmp [		fileName: to string! to-local-file tmp		win/text: fileName		either cb/data [img1: rcvLoadImage/grayscale tmp]					   [img1: rcvLoadImage tmp]		dst1:  rcvCloneImage img1		dst2:  rcvCloneImage img1		either (img1/size/x = img1/size/y) [bb/size: 120x120] [bb/size: 160x120]		bb/image: img1		canvas1/image: dst1		canvas2/image: dst2		isFile: true		r1/data: true		r2/data: false		r3/data: false	]]; ***************** Test Program ****************************view win: layout [		title "Edges detection: Neumann gradient and divergence"		origin margins space margins		cb: check "Grayscale" 		button 60 "Load" 		[loadImage]				button 60 "Quit" 		[rcvReleaseImage img1 								rcvReleaseImage dst1								rcvReleaseImage dst2								Quit]		return		bb: base 160x120 img1 		r1: radio "No filter"  [_rcvCopy img1 dst1 _rcvCopy img1 dst2]		r2: radio "Gradient"   [rcvGradNeumann img1 dst1 dst2]		r3: radio "Divergence" [rcvDivNeumann img1 dst1 dst2] 		return		text 506 "derivative along the x axis"		text 506 "derivative along the y axis"		return		canvas1: base 512x512 dst1		canvas2: base 512x512 dst2			do [r1/data: true]]