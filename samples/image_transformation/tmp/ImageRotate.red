Red [	Title:   "Rotate tests"	Author:  "Francois Jouen"	File: 	 %resize.red	Needs:	 'View]; last Red Master required!#include %../../../libs/redcv.red ; for redCV functionsmargins: 10x10img1: rcvLoadImage %../../../images/lena.jpgdst:  rcvCreateImage img1/sizeiSize: img1/sizerot: 0xyCenter: iSize / 2; ***************** Test Program ****************************view win: layout [		title "Resize Tests"		origin margins space margins				sl1: slider 326 		[	sz/text: form to integer! face/data * 359  									rot:  face/data * 359.0									rot: pi * rot / 180.0 ; degree to radians									print [ rot   " "  (cos(rot) +  sin(rot)) lf]									;canvas/offset/x: to integer! (cos(rot) +  sin(rot)) + 10									canvas/offset/y: to integer! (negate sin(rot) + cos(rot)) + 10								 ]		sz: field 40 "0"		button 60 "Quit" 		[rcvReleaseImage img1 dst Quit]		return 		canvas: base iSize dst			do [rcvCopyImage img1 dst sl1/data: 0.0]];