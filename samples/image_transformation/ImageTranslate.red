Red [	Title:   "Translate Image"	Author:  "Francois Jouen"	File: 	 %resize.red	Needs:	 'View]; last Red Master required!#include %../../libs/redcv.red ; for redCV functionsmargins: 10x10img1: rcvLoadImage %../../images/lena.jpgiSize: img1/sizefactor: 0x0drawBlk: rcvTranslateImage 0.25 factorappend drawBlk [img1] ; append to Draw block! the image instance; ***************** Test Program ****************************view win: layout [		title "Translate Image"		origin margins space margins		text "Translate"		sl1: slider 280		[sz/text: form as-pair to integer! face/data * 384 to integer! face/data * 384							factor: as-pair face/data * 384 face/data * 384 drawBlk/5: factor]		sz: field 60 "0x0"		button 60 "Quit" 		[Quit]		return 		canvas: base iSize black draw drawBlk			do [sl1/data: 0.0]]