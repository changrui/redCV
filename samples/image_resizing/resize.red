Red [	Title:   "Resize tests "	Author:  "Francois Jouen"	File: 	 %resize.red	Needs:	 'View]; last Red Master required!#include %../../libs/redcv.red ; for redCV functionsmargins: 10x10img1: rcvLoadImage %../../images/lena.jpgdst:  rcvCreateImage img1/sizeiSize: img1/sizenSize: img1/size; ***************** Test Program ****************************view win: layout [		title "Resize Tests"		origin margins space margins				sl1: slider 326 		[	sz/text: form to percent! (round face/data * 400) / 100.0 									nSize/x: to integer! isize/x * face/data * 400 / 100									nSize/y: to integer! isize/y * face/data * 400 / 100								 	sz2/text: form rcvResizeImage dst canvas nSize								 ]		sz: field 40 "100%"		sz2: field 70 "512x512"		button 60 "Quit" 		[rcvReleaseImage img1 dst Quit]		return 		canvas: base iSize dst			do [rcvCopyImage img1 dst sl1/data: 0.25]];